events {}

http {
    server {
        listen 443;

        location /repos {
            proxy_pass https://api.github.com/;
        }

        location /sona {
            proxy_pass ${SONA_URL}/sona;
        }

        location / {
            root /site;
            index index.html;

            include /etc/nginx/mime.types;
        }
    }
}